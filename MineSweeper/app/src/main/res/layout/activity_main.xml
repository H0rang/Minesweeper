<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/custom_view"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/info"
        android:text="Number of mines : 20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp"
        android:layout_alignTop="@+id/mines"
        android:layout_alignStart="@+id/greed" />

    <TextView
        android:id="@+id/mines"
        android:text="Mines marked : 0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/greed"
        android:layout_alignEnd="@+id/greed"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="41dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/textMode"
        android:layout_alignBottom="@+id/reset"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mode"
        android:id="@+id/mode"
        android:layout_below="@+id/greed"
        android:layout_alignEnd="@+id/greed" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/reset"
        android:layout_below="@+id/greed"
        android:layout_alignStart="@+id/greed" />
</RelativeLayout>
